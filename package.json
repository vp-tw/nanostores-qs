{
  "name": "@repo/root",
  "version": "0.0.0",
  "private": true,
  "description": "Monorepo for @vp-tw/nanostores-qs",
  "type": "module",
  "scripts": {
    "build": "run-s build:lib build:docs",
    "build:docs": "pnpm --filter docs build",
    "build:lib": "pnpm --filter @vp-tw/nanostores-qs build",
    "changeset": "changeset",
    "checkTypes": "tsgo -b --noEmit",
    "commit": "cz",
    "dev": "pnpm run --filter docs dev",
    "lint": "run-s lint:cspell lint:es lint:oxfmt",
    "lint:cspell": "cspell --no-summary --no-progress",
    "lint:es": "eslint . --fix --report-unused-disable-directives --max-warnings 0",
    "lint:es:dry": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:oxfmt": "oxfmt --write --no-error-on-unmatched-pattern .",
    "lint:oxfmt:dry": "oxfmt --check --no-error-on-unmatched-pattern .",
    "prepare": "husky",
    "release": "changeset publish",
    "test": "vitest --passWithNoTests",
    "version-packages": "changeset version"
  },
  "dependencies": {
    "@repo/dts": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@repo/utils": "workspace:*",
    "npm-run-all": "catalog:",
    "vite": "catalog:"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/cli": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@commitlint/types": "catalog:",
    "@eslint-react/eslint-plugin": "catalog:",
    "@total-typescript/ts-reset": "catalog:",
    "@types/node": "catalog:",
    "@typescript/native-preview": "catalog:",
    "@vp-tw/eslint-config": "catalog:",
    "@vp-tw/tsconfig": "catalog:",
    "commitizen": "catalog:",
    "cspell": "catalog:",
    "eslint": "catalog:",
    "eslint-config-prettier": "catalog:",
    "eslint-plugin-package-json": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "oxfmt": "catalog:",
    "tsx": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  },
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6"
}
