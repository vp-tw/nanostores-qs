{
  "name": "@repo/root",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run --filter demo build --outDir ../../dist",
    "commit": "cz",
    "dev": "pnpm run --filter demo dev",
    "lint": "run-p lint:*",
    "lint:cspell": "cspell --no-summary --no-progress",
    "lint:es": "eslint . --fix --report-unused-disable-directives --max-warnings 0",
    "lint:prettier": "prettier --ignore-unknown --write .",
    "lint:style": "stylelint '**/*.{css,js,jsx,ts,tsx}' --fix -i .stylelintignore",
    "prepare": "husky",
    "pub": "run-s pub:version pub:publish",
    "pub:publish": "lerna publish --no-private",
    "pub:version": "lerna version --conventional-commits -y"
  },
  "dependencies": {
    "@repo/dts": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@repo/utils": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "babel-plugin-react-compiler": "19.0.0-beta-e1e972c-20250221",
    "fs-extra": "^11.3.0",
    "npm-run-all": "^4.1.5",
    "vite": "^7.0.7"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.10.1",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@commitlint/types": "^19.8.0",
    "@eslint-react/eslint-plugin": "^1.34.1",
    "@eslint/compat": "^1.2.7",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/lint-staged": "^13.3.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vp-tw/eslint-config": "^0.0.29",
    "@vp-tw/tsconfig": "^3.0.0",
    "commitizen": "^4.3.1",
    "cspell": "^8.17.5",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-package-json": "^0.26.3",
    "eslint-plugin-react-compiler": "19.0.0-beta-e1e972c-20250221",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "lerna": "^8.2.1",
    "lint-staged": "^15.5.0",
    "pathe": "^2.0.3",
    "postcss-styled-syntax": "^0.7.1",
    "prettier": "^3.5.3",
    "stylelint": "^16.16.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-prettier": "^5.0.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
